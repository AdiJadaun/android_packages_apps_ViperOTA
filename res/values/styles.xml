<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowLightStatusBar">@bool/windowLightNavigationBar</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <item name="android:windowLightNavigationBar">@bool/windowLightNavigationBar</item>
        <item name="android:windowBackground">@color/update_background</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
        <item name="android:textColor">@color/action_bar_icon_color</item>
        <item name="android:itemBackground">@color/menu_bg</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/popupText</item>
        <item name="textAppearanceSmallPopupMenu">@style/popupTextSmall</item>
        <item name="alertDialogTheme">@style/MyDialogStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <item name="android:windowLightNavigationBar">@bool/windowLightNavigationBar</item>
        <item name="android:windowBackground">@color/update_background</item>
    </style>

    <style name="TextAppearanceInverted" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/inverted</item>
    </style>
    <style name="TextAppearanceTransparent" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.PopupMenuOverlapAnchor">
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">8dp</item>
        <item name="android:dropDownHorizontalOffset">-16dp</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/action_bar_icon_color</item>
    </style>

    <style name="AppTheme.OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/action_bar_icon_color</item>
    </style>

    <style name="popupText" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/action_bar_icon_color</item>
    </style>

    <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/menu_bg</item>
    </style>
    <style name="popupTextSmall" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/action_bar_icon_color</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:textColor">@color/action_bar_icon_color</item>
        <item name="android:textColorPrimary">@color/action_bar_icon_color</item>
        <item name="android:background">@color/menu_bg</item>
    </style>

    <style name="MyDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/action_bar_icon_color</item>
        <item name="android:textColorPrimary">@color/action_bar_icon_color</item>
        <item name="android:background">@color/menu_bg</item>
    </style>

    <style name="TextAppearance.Design.Snackbar.Message" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>